@model MovieStoreMvc.Models.DTO.MovieListVm
@{
}

<div class="tbl-container">
    <h2>Movies</h2>
    <div class="input-container">
        <a href="/admin/movies/add" class="btn btn-sec">Add Movie</a>
    </div>
    <table>
        <tr>
            <th>Title</th>
            <th>Genre</th>
            <th>ReleaseYear</th>
            <th>Image</th>
            <th>Cast</th>
            <th>Director</th>
            <th>Availability</th>
            <th>Action</th>
        </tr>
        @foreach(var item in Model.MovieList){
        <tr>
            <td>@item.Title</td>
                <td>@item.GenreNames</td>
                <td>@item.ReleaseYear</td>
            <td><img style="height:60px;width:80px" src="/Uploads/@item.MovieImage"/></td>
                <td>@item.Cast</td>
                <td>@item.Director</td>
                <td>@(item.Availability ? "Available" : "Not Available")</td>
                <td>
                <a href="/admin/movies/edit?id=@item.Id" class="btn btn-default"><i class="fa fa-edit"></i></a>
                <a onclick="return window.confirm('Are you sure?')" href="/admin/movies/delete?id=@item.Id" class="btn btn-danger"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
        }
     
    </table>
    <div class="input-container">
        <a href="/admin" class="btn btn-sec">Back</a>
    </div>
</div>
