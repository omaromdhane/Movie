@model IEnumerable<MovieStoreMvc.Models.Domain.Genre>
@{
}

<div class="tbl-container">
    <h2>Genres</h2>
    <div class="input-container">
        <a href="/admin/genres/add" class="btn btn-sec">Add Genre</a>
    </div>
    @if (TempData["msg"] != null)
    {
        <div class="alert mb-1">
            @TempData["msg"]
        </div>
    }
    <table>
        <tr>
            <th>Name</th>
            <th>Action</th>
        </tr>
        @foreach(var item in Model){
        <tr>
            <td>@item.GenreName</td>
            <td>
                <a href="/admin/genres/edit?id=@item.Id" class="btn btn-default"><i class="fa fa-edit"></i></a>
                    <a onclick="return window.confirm('Are you sure?')" href="/admin/genres/delete?id=@item.Id" class="btn btn-danger"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
        }
     
    </table>
    <div class="input-container">
        <a href="/admin" class="btn btn-sec">Back</a>
    </div>
</div>
